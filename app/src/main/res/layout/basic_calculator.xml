<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent">

	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:layout_marginTop="32dp"
		android:orientation="vertical"
		app:layout_constraintTop_toTopOf="parent"
		tools:layout_editor_absoluteX="32dp">

		<TextView
			android:id="@+id/result_basic"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:fontFamily="sans-serif"
			android:gravity="end"
			android:text="00.00"
			android:textAppearance="@style/TextAppearance.AppCompat.Large" />

		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_marginTop="32dp"
			android:gravity="top">

			<Button
				android:id="@+id/clear_button_basic"
				style="?android:attr/buttonBarButtonStyle"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_weight="1"
				android:background="#3F51B5"
				android:fontFamily="sans-serif"
				android:text="C/CE"
				android:textAppearance="@style/TextAppearance.AppCompat.Large"
				android:textColor="#FFFFFF"
				android:textColorLink="@color/colorAccent" />

			<Button
				android:id="@+id/all_clear_button_basic"
				style="?android:attr/buttonBarButtonStyle"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_weight="1"
				android:background="#3F51B5"
				android:fontFamily="sans-serif"
				android:text="AC"
				android:textAppearance="@style/TextAppearance.AppCompat.Large"
				android:textColor="#FFFFFF"
				android:textColorLink="@color/colorAccent" />

			<Button
				android:id="@+id/negative_button_basic"
				style="?android:attr/buttonBarButtonStyle"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_weight="1"
				android:background="#3F51B5"
				android:fontFamily="sans-serif"
				android:text="+/-"
				android:textAppearance="@style/TextAppearance.AppCompat.Large"
				android:textColor="#FFFFFF"
				android:textColorLink="@color/colorAccent" />

		</LinearLayout>

		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:baselineAligned="false">

			<LinearLayout
				android:layout_width="wrap_content"
				android:layout_height="match_parent"
				android:layout_weight="1"
				android:orientation="vertical">

				<Button
					android:id="@+id/button7_basic"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:layout_weight="1"
					android:background="#EAEAEA"
					android:fontFamily="sans-serif"
					android:text="7"
					android:textAppearance="@style/TextAppearance.AppCompat.Large" />

				<Button
					android:id="@+id/button4_basic"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:layout_weight="1"
					android:background="#EAEAEA"
					android:fontFamily="sans-serif"
					android:text="4"
					android:textAppearance="@style/TextAppearance.AppCompat.Large" />

				<Button
					android:id="@+id/button1_basic"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:layout_weight="1"
					android:background="#EAEAEA"
					android:fontFamily="sans-serif"
					android:text="1"
					android:textAppearance="@style/TextAppearance.AppCompat.Large" />

				<Button
					android:id="@+id/button0_basic"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:layout_weight="1"
					android:background="#EAEAEA"
					android:fontFamily="sans-serif"
					android:text="0"
					android:textAppearance="@style/TextAppearance.AppCompat.Large" />
			</LinearLayout>

			<LinearLayout
				android:layout_width="wrap_content"
				android:layout_height="match_parent"
				android:layout_weight="1"
				android:orientation="vertical">

				<Button
					android:id="@+id/button8_basic"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:layout_weight="1"
					android:background="#EAEAEA"
					android:fontFamily="sans-serif"
					android:text="8"
					android:textAppearance="@style/TextAppearance.AppCompat.Large" />

				<Button
					android:id="@+id/button5_basic"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:layout_weight="1"
					android:background="#EAEAEA"
					android:fontFamily="sans-serif"
					android:text="5"
					android:textAppearance="@style/TextAppearance.AppCompat.Large" />

				<Button
					android:id="@+id/button2_basic"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:layout_weight="1"
					android:background="#EAEAEA"
					android:fontFamily="sans-serif"
					android:text="2"
					android:textAppearance="@style/TextAppearance.AppCompat.Large" />

				<Button
					android:id="@+id/dot_button_basic"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:layout_weight="1"
					android:background="#EAEAEA"
					android:fontFamily="sans-serif"
					android:text="."
					android:textAppearance="@style/TextAppearance.AppCompat.Large" />
			</LinearLayout>

			<LinearLayout
				android:layout_width="wrap_content"
				android:layout_height="match_parent"
				android:layout_weight="1"
				android:orientation="vertical">

				<Button
					android:id="@+id/button9_basic"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:layout_weight="1"
					android:background="#EAEAEA"
					android:fontFamily="sans-serif"
					android:text="9"
					android:textAppearance="@style/TextAppearance.AppCompat.Large" />

				<Button
					android:id="@+id/button6_basic"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:layout_weight="1"
					android:background="#EAEAEA"
					android:fontFamily="sans-serif"
					android:text="6"
					android:textAppearance="@style/TextAppearance.AppCompat.Large" />

				<Button
					android:id="@+id/button3_basic"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:layout_weight="1"
					android:background="#EAEAEA"
					android:fontFamily="sans-serif"
					android:text="3"
					android:textAppearance="@style/TextAppearance.AppCompat.Large" />

				<Button
					android:id="@+id/equality_button_basic"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:layout_weight="1"
					android:background="#EAEAEA"
					android:fontFamily="sans-serif"
					android:text="="
					android:textAppearance="@style/TextAppearance.AppCompat.Large" />
			</LinearLayout>

			<LinearLayout
				android:layout_width="wrap_content"
				android:layout_height="match_parent"
				android:layout_weight="1"
				android:orientation="vertical">

				<Button
					android:id="@+id/divide_button_basic"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:layout_weight="1"
					android:background="#3F51B5"
					android:fontFamily="sans-serif"
					android:text="/ "
					android:textAppearance="@style/TextAppearance.AppCompat.Large"
					android:textColor="#FFFFFF" />

				<Button
					android:id="@+id/multiply_button_basic"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:layout_weight="1"
					android:background="#3F51B5"
					android:fontFamily="sans-serif"
					android:text="*"
					android:textAppearance="@style/TextAppearance.AppCompat.Large"
					android:textColor="#FFFFFF" />

				<Button
					android:id="@+id/subtract_button_basic"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:layout_weight="1"
					android:background="#3F51B5"
					android:fontFamily="sans-serif"
					android:text="-"
					android:textAppearance="@style/TextAppearance.AppCompat.Large"
					android:textColor="#FFFFFF" />

				<Button
					android:id="@+id/add_button_basic"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:layout_weight="1"
					android:background="#3F51B5"
					android:fontFamily="sans-serif"
					android:text="+"
					android:textAppearance="@style/TextAppearance.AppCompat.Large"
					android:textColor="#FFFFFF" />
			</LinearLayout>
		</LinearLayout>

	</LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>